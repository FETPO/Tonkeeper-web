{
  "name": "@tonkeeper/desktop",
  "version": "0.1.0",
  "author": "Nikita Kuznetsov <nkuz915@gmail.com>",
  "description": "Your desktop wallet on The Open Network",
  "homepage": ".",
  "main": "build/electron/main.js",
  "build": {
    "appId": "com.electron.tonkeeper",
    "productName": "Tonkeeper",
    "extends": null,
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "scripts": {
    "clean": "rm -fr dist && rm -fr build",
    "locales": "ts-node ./task/locales",
    "react:start": "npm run locales && PORT=3005 react-scripts start",
    "react:build": "react-scripts build && npm run locales",
    "postinstall": "electron-builder install-app-deps",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run react:start\" \"wait-on http://127.0.0.1:3005 && tsc -p electron -w\" \"wait-on http://127.0.0.1:3005 && tsc -p electron && electron .\"",
    "electron:build": "npm run react:build && tsc -p electron && electron-builder",
    "start": "npm run electron:dev",
    "build": "npm run clean && npm run electron:build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@tonkeeper/locales": "0.1.0",
    "@tonkeeper/uikit": "0.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.4.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.6",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "22.0.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-is-dev": "^2.0.0",
    "electron-reload": "^2.0.0-alpha.1",
    "react-scripts": "5.0.1",
    "typescript": "^4.9.4",
    "wait-on": "^6.0.1",
    "web-vitals": "^2.1.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
